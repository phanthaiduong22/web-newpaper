{{#section "css"}}
  <link href="https://unpkg.com/@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />
{{/section}}

{{#section "js"}}
  <script src="https://unpkg.com/@yaireo/tagify"></script>
  <script src="https://unpkg.com/@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
  <script>
    var input = document.querySelector('input[name=tags]');
    new Tagify(input)
  </script>
    <script
    src="https://cdn.tiny.cloud/1/gvtv7ihf6847atiz3flob6067u01hd25hmsld40h5o94kqy1/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"
  ></script

{{/section}}
<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body bg-primary">
          <h1 class="card-title mb-0 text-white text-center">List of Papers</h1>
        </div>
        <div class="table-responsive">
          <table class="table border no-wrap user-table mb-0">
            <thead>
              <tr>
                <div class="row">
                  <th scope="col" class="text-center col-1 border-0   font-medium pl-4">#</th>
                  <th scope="col" class="text-center col-3 order-0  font-medium">Paper Title</th>
                  <th scope="col" class="text-center col-1 border-0  font-medium">Status</th>
                  <th scope="col" class="text-center col-1 border-0  font-medium">Publish Date</th>
                  <th scope="col" class="text-center col-6 border-1  font-medium">Comment</th>
                </div>
                
              </tr>
            </thead>
            <tbody>
              {{!--  --}}
              {{#each this.papers}}
              
                <tr>
                  <td class="text-center pl-4">{{@index}}</td>
                  <td class="col-md-6">
                      {{#eq Status "Draft"}}
                        <h5><a class="font-medium mb-0 text-info" href="/writer/management/paper/{{PaperID}}">{{Title}}</a></h5>
                      {{/eq}}

                      {{#eq Status "Rejected"}}
                        <h5><a class="font-medium mb-0 text-info" href="/writer/management/paper/{{PaperID}}">{{Title}}</a></h5>
                      {{/eq}}

                      {{#eq Status "Accepted"}}
                        <h5 class="text-success">{{Title}}</h5>
                      {{/eq}}
                      
                      {{#eq Status "Published"}}
                        <h5 class="text-primary">{{Title}}</h5>
                      {{/eq}}
                  </td>
                  <td class="text-center col-md-1">
                    <span class="text-muted">{{Status}}</span><br>
                  </td>
                  <td class="text-center col-md-2">  
                    <span class="text-muted">{{CreatedAt}}</span><br>
                  </td>
                  <td class="col-md-3"> 
                    <span class="text-muted">{{EditorComment}}</span><br>
                  </td> 
                </tr>
              {{/each}}
              
              {{!--  --}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>