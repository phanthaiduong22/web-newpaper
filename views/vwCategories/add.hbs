<div class="card p-5">
  <h4 class="card-header">
    Create A New Category
  </h4>
  {{#if err_message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">
          Ã—
        </span>
      </button>
      {{err_message}}
    </div>
  {{/if}}
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatName">
          Category
        </label>
        <input
          type="text"
          class="form-control"
          id="txtCatName"
          name="txtCatName"
          required
          autofocus
        />
      </div>
      <button type="submit" class="btn btn-success mb-2">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      <a class="btn btn-primary mb-2" href="/admin/categories/" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
    </form>
  </div>
</div>