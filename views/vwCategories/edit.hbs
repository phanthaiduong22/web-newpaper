<div class="card p-5">
  <h4 class="card-header">
    Category
  </h4>
  {{#if err_message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">
          Ã—
        </span>
      </button>
      {{err_message}}
    </div>
  {{/if}}
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatID">
          Category ID
        </label>
        <input
          type="text"
          readonly
          class="form-control"
          id="txtCatID"
          name="CatID"
          value="{{this.category.CatID}}"
        />
      </div>
      <div class="form-group">
        <label for="txtCatName">
          Category Name
        </label>
        <input
          type="text"
          class="form-control"
          id="txtCatName"
          name="CatName"
          required
          autofocus
          value="{{this.category.CatName}}"
        />
      </div>
      <a class="btn btn-primary mb-2" href="/admin/categories/" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button
        type="submit"
        class="btn btn-success mb-2"
        formaction="/admin/categories/patch"
      >
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      <button
        type="submit"
        class="btn btn-danger mb-2"
        formaction="/admin/categories/del"
      >
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
    </form>
  </div>
</div>