<div class="card p-5">
  <h4 class="card-header">
    Category
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatID">
          Category ID
        </label>
        <input
          type="text"
          readonly
          class="form-control"
          id="txtCatID"
          name="CatID"
          value="{{this.category.CatID}}"
        />
      </div>
      <div class="form-group">
        <label for="txtCatName">
          Category Name
        </label>
        <input
          type="text"
          class="form-control"
          id="txtCatName"
          name="CatName"
          autofocus
          value="{{this.category.CatName}}"
        />
      </div>
      <a class="btn btn-primary" href="/admin/categories/" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button
        type="submit"
        class="btn btn-success"
        formaction="/admin/categories/patch"
      >
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      <button
        type="submit"
        class="btn btn-danger"
        formaction="/admin/categories/del"
      >
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
    </form>
  </div>
</div>