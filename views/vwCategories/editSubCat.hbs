<div class="card p-5">
  <h4 class="card-header">
    Sub Categories
  </h4>
  {{#if err_message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">
          Ã—
        </span>
      </button>
      {{err_message}}
    </div>
  {{/if}}
  <div class="card-body">
    {{#each subCategories}}
      <form method="POST" action="">
        <div class="form-group">
          <label for="txtSubCatName">
            Sub Category Name
          </label>
          <input
            type="text"
            class="form-control"
            id="txtSubCatName"
            name="SubCatName"
            required
            autofocus
            value="{{SubCatName}}"
          />
        </div>
        <a class="btn btn-primary" href="/admin/categories/" role="button">
          <i class="fa fa-backward" aria-hidden="true"></i>
          Back to List
        </a>
        <button
          type="submit"
          class="btn btn-success"
          formaction="/admin/categories/
            {{CatID}}
             /subCategories/
            {{SubCatID}}
             /patch"
        >
          <i class="fa fa-check" aria-hidden="true"></i>
          Save
        </button>
        <button
          type="submit"
          class="btn btn-danger"
          formaction="/admin/categories/
            {{CatID}}
             /subCategories/
            {{SubCatID}}
             /del"
        >
          <i class="fa fa-trash-o" aria-hidden="true"></i>
          Delete
        </button>
      </form>
    {{/each}}
  </div>
</div>