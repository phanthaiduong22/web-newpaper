<div class="card p-5">
  <h4 class="card-header d-flex justify-content-between">
    Tags
    {{#eq authUser.Role "admin"}}
      <a class="btn btn-outline-success" href="/tags/add" role="button">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add a tag
      </a>
    {{/eq}}
  </h4>
  <div class="card-body">
    {{#if this.empty}}
      <h5 class="card-title">
        No data!
      </h5>
    {{else}}
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="text-center" scope="col">
              #
            </th>
            <th scope="col">
              Tag
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each this.tags}}
            <tr>
              <th class="text-center" scope="row">
                {{@index}}
              </th>
              <td>
                <a href="/tags?id={{TagId}}">
                  {{TagName}}
                </a>
              </td>
              <td class="text-right">
                {{#eq ../authUser.Role "admin"}}
                <a
                  class="btn btn-primary btn-sm"
                  href="/tags/edit?id={{TagId}}"
                  role="button"
                  title="Edit"
                >
                  <i class="fa fa-pencil w-100" aria-hidden="true">
                    Edit
                  </i>
                </a>
                {{/eq}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  </div>
</div>